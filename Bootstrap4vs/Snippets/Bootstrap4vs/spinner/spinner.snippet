<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>Spinner</Title>
      <Author>Ouali Amar</Author>
      <Description>Indicate the loading state of a component or page with Bootstrap spinners, built entirely with HTML, CSS, and no JavaScript.</Description>
      <Shortcut>b-spinner</Shortcut>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
    </Header>
    <Snippet>
      <Declarations>
        <Literal>
          <ID>status</ID>
          <ToolTip>The spinner accessibility status</ToolTip>
          <Default>Loading...</Default>
        </Literal>
      </Declarations>
      <Code Language="HTML">
        <![CDATA[
        <div class="spinner-border text-primary" role="status">
          <span class="sr-only">$status$</span>
        </div>$end$
        ]]>
      </Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>